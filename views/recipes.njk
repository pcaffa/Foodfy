{% extends "layout.njk" %} 

{% block head %}
    <title>Foodfy- Receitas</title>
{% endblock %}

{% block content %}
    <main> 
        <section class="cards">
            {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card-img">
                    <img src="/assets/{{item.id}}.png" alt="{{item.title}}">
                </div>
                <div class="card-info">
                    <h3 class="recipe">{{item.title}}</h3>
                    <p class="author">{{item.author}}</p>
                </div>                
            </div> 
            {% endfor %}             
        </section>
    </main>

<script src="/scripts.js"></script>

{% endblock %}



